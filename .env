# Gemini CLI Environment Variables
# Copy this file to .env and fill in your values

# Option 1: Gemini API Key (from https://aistudio.google.com/app/apikey)
# Uncomment and set your API key
# GEMINI_API_KEY=your-gemini-api-key-here

# Option 2: Google Cloud API Key (for Vertex AI)
# GOOGLE_API_KEY=your-google-api-key-here
# GOOGLE_CLOUD_PROJECT=your-project-id

# Optional: Google Application Credentials (for service account auth)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Optional: Set default model
# GEMINI_MODEL=gemini-2.5-pro

# Optional: Enable Vertex AI mode
# GOOGLE_GENAI_USE_VERTEXAI=true

# Optional: Enable sandbox mode (requires Docker)
# GEMINI_SANDBOX=docker

# Optional: Enable checkpointing for file recovery
# GEMINI_CHECKPOINTING_ENABLED=true

# Optional: Disable usage statistics
# GEMINI_USAGE_STATISTICS_ENABLED=false

# Optional: Set theme (e.g., "GitHub", "Dracula", "One Dark")
# GEMINI_THEME=GitHub

# Development settings
NODE_ENV=development
FORCE_COLOR=1